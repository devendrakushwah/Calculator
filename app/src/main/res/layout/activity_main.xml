<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kushwah.devendra.calculator.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:fontFamily="cursive"
            android:text="Calculator"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorEdgeEffect"
            android:textSize="48sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="monospace"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:cursorVisible="false"/>

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginTop="33dp"
            android:layout_toStartOf="@+id/two"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="casual"
            android:text="1"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/one"
            android:layout_alignBottom="@+id/one"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="casual"
            android:text="2"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/two"
            android:layout_alignBottom="@+id/two"
            android:layout_toEndOf="@+id/two"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="casual"
            android:text="3"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/one"
            android:layout_below="@+id/one"
            android:background="@android:color/holo_blue_light"
            android:fontFamily="casual"
            android:text="4"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:fontFamily="casual"
            android:text="5"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/four"
            android:layout_alignBottom="@+id/four"
            android:layout_toEndOf="@+id/four" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:fontFamily="casual"
            android:text="6"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/three"
            android:layout_toEndOf="@+id/two" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="casual"
            android:text="7"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/four"
            android:layout_toStartOf="@+id/eight" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="casual"
            android:text="9"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/six"
            android:layout_alignStart="@+id/six" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="casual"
            android:text="8"
            android:textColor="?android:attr/colorBackgroundFloating"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/four"
            android:layout_toStartOf="@+id/nine" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seven"
            android:layout_toEndOf="@+id/seven"
            android:background="@android:color/holo_blue_light"
            android:fontFamily="casual"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zero"
            android:layout_toEndOf="@+id/eight"
            android:background="@android:color/holo_orange_dark"
            android:text="CLEAR"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/seven"
            android:layout_below="@+id/seven"
            android:background="@android:color/holo_orange_dark"
            android:text="Undo"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/undo"
            android:layout_below="@+id/zero"
            android:layout_marginTop="19dp"
            android:background="@android:color/holo_green_light"
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/add"
            android:layout_below="@+id/add"
            android:background="@android:color/holo_green_light"
            android:text="*"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mult"
            android:layout_toEndOf="@+id/add"
            android:background="@android:color/holo_green_light"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub"
            android:layout_toEndOf="@+id/add"
            android:background="@android:color/holo_green_light"
            android:text="/"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/div"
            android:layout_alignTop="@+id/sub"
            android:layout_toEndOf="@+id/sub"
            android:background="@android:color/holo_orange_dark"
            android:text="="
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/info"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/three"
            android:background="@android:drawable/ic_menu_info_details" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
